<h2><%= @doctor.name %> - <%= @doctor.department %></h2>

<h3>Appointments</h3>

  <ul style="list-style-type:square">
    <% @doctor.appointments.each do |a| %>
      <li>
        <%= a.formatted_datetime %> with
        <%= link_to a.patient.name, patient_path(a.patient) %>
      </li>
    <% end %>
  </ul>
